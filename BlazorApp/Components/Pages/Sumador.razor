@page "/sumador"
@rendermode InteractiveServer

<PageTitle>Contador</PageTitle>

<h3>Sumador</h3>

<div>
    <label>Primer Número: </label>
    <input type="number" @bind="FirstNumber" />
</div>

<div>
    <label>Segundo Número: </label>
    <input type="number" @bind="SecondNumber" />
</div>

<div>
    <button @onclick="CalculateSum">Sumar</button>
</div>

@if (Sum.HasValue)
{
    <p>Resultado: @Sum</p>
}

@code {
    private int FirstNumber { get; set; } = 0;  // Initialize to avoid null issues
    private int SecondNumber { get; set; } = 0;
    private int? Sum { get; set; } = null;

    private void CalculateSum()
    {
        // Ensure the button action works
        Console.WriteLine("Button clicked!");
        Sum = FirstNumber + SecondNumber;
    }
}
